<div class="show-song-container">
  <div class="inner-edit-song-container col-md-12">
    <%= form_for @song do |f| %>
      <h3><%= f.text_field :title, placeholder: "Title" %></h3>
      <%= f.text_area :lyrics, class: "lyrics-size" %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "Create Song" %>
    <% end %>
    <%= link_to "Back", home_path %>
    <%= link_to 'Delete', @song, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
















